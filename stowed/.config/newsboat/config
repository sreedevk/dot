# ---- OPTS
auto-reload               yes
reload-time               80
reload-threads            8
download-retries          4
prepopulate-query-feeds   yes
show-read-feeds           no
feed-sort-order           unreadarticlecount-asc
save-path                 ~/.local/share/newsboat/saved
browser                   brave
text-width                80
confirm-exit              no
cleanup-on-quit           no
external-url-viewer       "urlscan -dc -r 'brave {}'"

# ---- THEME
color listnormal          default default
color listnormal_unread   default default
color listfocus           black yellow
color listfocus_unread    black yellow
color info                black yellow
color article             default default

# ---- TITLE FORMATS
articlelist-title-format    "— [%T]—— (%u unread, %t total)—— %>—— (%U)— "
datetime-format             "%b %d %H:%M"
feedlist-title-format       "— [%u feeds with new articles]—— %>—— (%N %V)— "

# ---- KEYBINDINGS
bind-key S save
bind-key k up
bind-key j down
bind-key G end
bind-key d pagedown
bind-key u pageup
bind-key o open
bind-key q quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete

macro , open-in-browser
macro a set browser "yt-dlp --embed-metadata -xic -f bestaudio/best --restrict-filenames" ; open-in-browser ; set browser brave
macro A set browser "setsid -f mpv -vo null" ; open-in-browser ; set browser brave
macro v set browser "setsid -f mpv" ; open-in-browser ; set browser brave
macro w set browser "brave" ; open-in-browser ; set browser brave
macro c set browser "echo %u | xclip -r -sel c" ; open-in-browser ; set browser brave
macro C set browser "youtube-viewer --comments=%u" ; open-in-browser ; set browser brave

highlight all "---.*---" yellow
highlight feedlist ".*(0/0))" black
highlight article "(^Feed:.*|^Title:.*|^Author:.*)" cyan default bold
highlight article "(^Link:.*|^Date:.*)" default default
highlight article "https?://[^ ]+" green default
highlight article "^(Title):.*$" blue default
highlight article "\\[[0-9][0-9]*\\]" magenta default bold
highlight article "\\[image\\ [0-9]+\\]" green default bold
highlight article "\\[embedded flash: [0-9][0-9]*\\]" green default bold
highlight article ":.*\\(link\\)$" cyan default
highlight article ":.*\\(image\\)$" blue default
highlight article ":.*\\(embedded flash\\)$" magenta default
