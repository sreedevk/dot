#!/bin/zsh

echo "Backing up ~/Data directory to rpi4b:/home/sreedev/Data/devstation-repository"
restic -r sftp:rpi4b:/home/sreedev/Data/devstation-repository --verbose backup --iexclude "debug" --iexclude "release" --iexclude "labs" ~/Data 
echo "\n\n"

echo "Backing up ~/Media directory to rpi4b:/home/sreedev/Data/devstation-repository"
restic -r sftp:rpi4b:/home/sreedev/Data/devstation-repository --verbose backup --iexclude "debug" --iexclude "release" --iexclude "labs" ~/Media/
echo "\n\n"

echo "Backing up ~/Documents directory to rpi4b:/home/sreedev/Data/devstation-repository"
restic -r sftp:rpi4b:/home/sreedev/Data/devstation-repository --verbose backup --iexclude "debug" --iexclude "release" --iexclude "labs" ~/Documents/
echo "\n\n"

echo "Backing up ~/Downloads directory to rpi4b:/home/sreedev/Data/devstation-repository"
restic -r sftp:rpi4b:/home/sreedev/Data/devstation-repository --verbose backup --iexclude "debug" --iexclude "release" --iexclude "labs" ~/Downloads/
echo "\n\n"
