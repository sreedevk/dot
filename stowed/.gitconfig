[user]
	email = sreedevpadmakumar@gmail.com
	name = sreedev
	signingkey = F2D006638E49CD45
[core]
	attributesfile = /home/sreedev/.gitattributes
  editor = nvim
  pager = delta
[commit]
	gpgsign = true
[init]
	defaultBranch = master
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
  ui = true
[alias]
  st     = status
  co     = checkout
  br     = branch
  cb     = checkout -b
  dfs    = diff --staged
  cm     = commit
  ca     = commit --amend
  cp     = cherry-pick
  cl 	   = clone --recursive -j8
  wta    = worktree add
  wtr    = worktree remove
[rerere]
  enabled = false
[advice]
  detachedHead = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
  diffFilter = delta --color-only
[add.interactive]
  useBuiltin = false # required for git 2.37.0
[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
