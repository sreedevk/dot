# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s: ÃŸ

general {
        colors = true
        interval = 4
        color_good = "#2AA198"
        color_bad = "#586E75"
        color_degraded = "#DC322F"
}

order += "cpu_usage"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "memory"
order += "tztime ny"
order += "tztime local"

cpu_usage {
        format = " cpu  %usage "
}

load {
        format = " load %1min "
        # max_threshold = 0.3
}

wireless _first_ {
        format_up = " wlp59S0: %ip "
        format_down = " wlp59S0: no conn"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = " lan: %ip "
        format_down = " lan: no conn "
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage "
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = "CHR"
        status_bat = "DC"
        status_full = "AC"
        low_threshold = 15
        threshold_type = time
}

memory {
        format = " %used | %available "
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " %Z %d.%m.%Y %H:%M:%S "
}

tztime ny {
        format = " %Z %d.%m.%Y %H:%M:%S "
        timezone = "America/New_York"
}
