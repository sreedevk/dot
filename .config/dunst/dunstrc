[global]
    frame_width = 1
    frame_color = "#788388"
    font = JetBrains Mono 10
    markup = yes
    allow_markup = yes
    format = "%a\n<b>%s</b>\n%b\n%p"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "600x5-50+50"
    shrink = yes
    transparency = 40
    idle_threshold = 120 
    monitor = 0
    notification_height = 0
    follow = mouse
    sticky_history = yes
    history_length = 10
    show_indicators = yes
    line_height = 2
    separator_height = 2
    padding = 12
    horizontal_padding = 24
    startup_notification = false
    dmenu = /usr/bin/dmenu -p dunst:
    browser = brave
    icon_position = left
    icon_path = /usr/share/icons/Adwaita/16x16/status/:/usr/share/icons/Adwaita/16x16/devices/
    max_icon_size=32

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = mod1+grave

